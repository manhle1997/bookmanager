@model BookMan.Mvc.Models.Book

@{
    ViewData["Title"] = $"Edit - {Model.Name}";
}

<h1>Chỉnh sửa tác phẩm</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <partial name="_Form" model="Model" />
            <hr />
            <div class="form-group">
                <input type="submit" value="Lưu thông tin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-outline-primary">Danh sách</a>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info">Trở lại</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Xoá</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
